{
  "extends": [
    "config:base",
    ":semanticCommitType(fnord)",
    ":semanticCommitScope({{baseDir}})",
    ":semanticCommits"
  ],
  "packageRules": [
    {
      "additionalBranchPrefix": "{{baseDir}}-",
      "matchPackagePatterns": [".*"],
      "semanticCommitScope": "{{parentDir}}",
      "semanticCommits": "enabled"
    }
  ]
}
